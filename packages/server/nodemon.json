
{
  "_comment": "file_path: packages/server/nodemon.json",
  "watch": ["src", "../shared/dist"],
  "ext": "ts,json,env,js",
  "exec": "cross-env NODE_ENV=development tsx ./src/server.ts",
  "ignore": [
    "src/**/*.spec.ts",
    "dist/**/*",
    "node_modules",
    ".git"
  ],
  "env": {
    "PORT": "5000",
    "NODE_ENV": "development"
  },
  "delay": "1500",
  "execMap": {
    "ts": "tsx"
  }
}